@using ControleDeBar.WebApp.Models

@model EditarMesaViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Edição de Mesa";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form action="/mesas/editar/@Model.Id" method="post">
                    <h3>Formulário de Edição</h3>

                    <div class="form-group d-grid gap-2 mt-5">
                        <label for="Numero" class="control-label fs-5">Número:</label>
                        <input name="Numero" class="form-control" type="number" value="@Model.Numero" />
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label for="Capacidade" class="control-label fs-5">Capacidade:</label>
                        <input name="Capacidade" class="form-control" type="number" value="@Model.Capacidade" />
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/mesas">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-primary rounded-4 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>