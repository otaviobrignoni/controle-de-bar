@model FecharAccountViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Fechamento de Account";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <form asp-action="FecharConfirmado" asp-route-id="@Model.Id">
                    <h3>Confirmação de Fechamento de Account</h3>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Owner" class="control-label fs-5">Owner:</label>
                        <input asp-for="Owner" class="form-control" readonly disabled />
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Table" class="control-label fs-5">Table:</label>
                        <input asp-for="Table" class="form-control" readonly disabled />
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Waiter" class="control-label fs-5">Waiter:</label>
                        <input asp-for="Waiter" class="form-control" readonly disabled />
                    </div>
                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="ValorTotal" class="control-label fs-5">Valor Total (R$):</label>
                        <input asp-for="ValorTotal" type="number" min="0" step="0.01" pattern="^\d+(?:\,\d{1,2})?$" class="form-control" readonly disabled />
                    </div>
                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a href="/accounts">Voltar para a listagem</a>
                        <button type="submit" class="btn btn-danger rounded-3 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>